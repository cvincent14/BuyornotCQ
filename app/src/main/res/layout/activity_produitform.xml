            <android.support.constraint.ConstraintLayout
                android:id="@+id/proteine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false">

                <TextView
                    android:id="@+id/libProteine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protéine :"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    tools:text="Protéine :" />

                <EditText
                    android:id="@+id/formProteine"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    app:layout_constraintStart_toEndOf="@+id/libProteine" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/sel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false">

                <TextView
                    android:id="@+id/libSel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sel :"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    tools:text="Sel :" />

                <EditText
                    android:id="@+id/formSel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    app:layout_constraintStart_toEndOf="@+id/libSel" />
            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/Valider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="valider"
                tools:text="valider" />

            <Button
                android:id="@+id/Annuler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="back"
                android:text="annuler"
                tools:text="annuler" />

        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>