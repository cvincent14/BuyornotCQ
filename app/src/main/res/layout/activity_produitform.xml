                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acide gras :"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    tools:text="Acide gras :" />

                <EditText
                    android:id="@+id/formAcideGras"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    app:layout_constraintStart_toEndOf="@+id/libAcideGras" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/glucide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false">

                <TextView
                    android:id="@+id/libGlucide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Glucide :"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    tools:text="Glucide :" />

                <EditText
                    android:id="@+id/formGlucide"
