<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProduitForm">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textViewCol1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Ajout Produit"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="Ajout Produit"
                tools:textSize="30dp" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/libelle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false">

                <TextView
                    android:id="@+id/libLib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Libellé :"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Libellé :" />

                <EditText
                    android:id="@+id/formLib"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    app:layout_constraintStart_toEndOf="@+id/libLib" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false">

                <TextView
                    android:id="@+id/libIngredient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingrédient :"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    tools:text="Ingrédient :" />

                <EditText
                    android:id="@+id/formIngredient"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    app:layout_constraintStart_toEndOf="@+id/libIngredient" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/lien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false">


                <TextView
                    android:id="@+id/libLien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lien : "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    tools:text="Lien : " />

                <EditText
                    android:id="@+id/formLien"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    app:layout_constraintStart_toEndOf="@+id/libLien" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
